<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginTop="10dp"
    android:checkable="true"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/repository_author"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/author"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/repository_commit_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat"
            android:text="Commit message:"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@id/repository_author"
            app:layout_constraintStart_toStartOf="@id/repository_author"
            app:layout_constraintTop_toBottomOf="@id/repository_author" />

        <TextView
            android:id="@+id/repository_commit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat"
            android:text="%s"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@id/repository_commit_label"
            app:layout_constraintStart_toStartOf="@id/repository_commit_label"
            app:layout_constraintTop_toBottomOf="@id/repository_commit_label" />

        <TextView
            android:id="@+id/repository_btn_acess_commit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/repository_acess_commit_btn"
            android:textColor="@color/blue"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@id/repository_commit_text"
            app:layout_constraintStart_toStartOf="@id/repository_commit_text"
            app:layout_constraintTop_toBottomOf="@id/repository_commit_text" />

        <TextView
            android:id="@+id/repository_commit_created"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:fontFamily="@font/montserrat"
            android:text="@string/repository_commit_created_date"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/repository_btn_acess_commit"
            app:layout_constraintStart_toStartOf="@id/repository_btn_acess_commit"
            app:layout_constraintTop_toBottomOf="@id/repository_btn_acess_commit" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>